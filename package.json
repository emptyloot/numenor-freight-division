{
  "name": "numenor",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^1.12.2",
    "firebase": "^12.4.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^6.30.1",
    "react-router-dom": "^6.30.1",
    "react-scripts": "^5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start:react": "react-scripts start",
    "serve:emulators": "firebase emulators:start --only functions,firestore,auth,hosting,pubsub",
    "start": "npm run build && npm run serve:emulators",
    "build": "react-scripts build",
    "lint": "eslint \"src/**/*.{js,jsx}\" \"functions/src/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.{js,jsx}\" \"functions/src/**/*.js\" \"functions/tests/**/*.js\" --fix",
    "test:all": "react-scripts test --watchAll=false && (cd functions && npm test)",
    "test:server": "cd functions && npm test",
    "test": "react-scripts test --watchAll=false",
    "test:coverage": "react-scripts test --watchAll=false --coverage && (cd functions && npm test -- --coverage)",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:jsdoc/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "spellcheck"
    ],
    "rules": {
      "jsdoc/require-jsdoc": [
        "warn",
        {
          "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true,
            "ArrowFunctionExpression": true,
            "FunctionExpression": true
          }
        }
      ],
      "spellcheck/spell-checker": [
        "warn",
        {
          "skipWords": [
            "jsdoc",
            "eslint",
            "const",
            "jsx",
            "a11y",
            "Perf",
            "dom",
            "matchers",
            "vitals",
            "cls",
            "lcp",
            "fid",
            "fcp",
            "inp",
            "ttfb",
            "webfont",
            "numenor",
            "bitcraft",
            "Armenelos",
            "firestore",
            "quant",
            "tp",
            "bg",
            "mx",
            "mb",
            "2xl",
            "py",
            "px",
            "lg",
            "md",
            "sm",
            "xl",
            "nowrap",
            "whitespace",
            "firebaserc",
            "semibold",
            "ffc107",
            "blox",
            "pathname",
            "noopener",
            "noreferrer",
            "href",
            "mr",
            "firebase",
            "axios",
            "uri",
            "localhost",
            "cors",
            "unmount",
            "uid",
            "req",
            "Cancelled",
            "Unassign"
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ],
    "functions/src/**/*.js": [
      "eslint --fix --max-warnings=0"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^61.1.5",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-spellcheck": "^0.0.20",
    "firebase-tools": "^14.22.0",
    "prettier": "^3.6.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!axios)/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/reportWebVitals.js",
      "<rootDir>/src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
